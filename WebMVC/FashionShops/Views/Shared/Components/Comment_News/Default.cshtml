@using FashionShops.ViewModels.News
@model IEnumerable<CommentVM>
@{
    ViewData["Title"] = "Default";
}

<div class="comments">
    @{
        var CountComment = ViewBag.CountComment;
    }
    <h3 class="title">@CountComment Comments</h3><!-- End .title -->

    <ul>
        @foreach (var item in Model) {
        <li>
            <div class="comment">
                <figure class="comment-media">
                    <a href="#">
                        <img src="/image/Avatar/@item.Avatar" alt="User name">
                    </a>
                </figure>

                <div class="comment-body">
                    <a href="#" class="comment-reply">Reply</a>
                    <div class="comment-user">
                        <h4><a href="#">@item.NameMember</a></h4>
                        <span class="comment-date">@item.DateComment</span>
                    </div><!-- End .comment-user -->

                    <div class="comment-content">
                        <p>@item.Comment</p>
                    </div><!-- End .comment-content -->
                </div><!-- End .comment-body -->
            </div><!-- End .comment -->
        </li>
        }
    </ul>
</div><!-- End .comments -->

