@model IEnumerable<EcommerceMVC.ViewModels.CategoriesVM>

<div class="mb-4">
    <h4>Categories</h4>
    <ul class="list-unstyled fruite-categorie">
        @foreach (var item in Model)
        {
            <li>
                <div class="d-flex justify-content-between fruite-name">
                    <a asp-controller="Home" asp-action="Index" asp-route-loai="@item.categoryCode"><i class="fas fa-apple-alt me-2"></i>@item.categoryName</a>
                    <span>(@item.amount)</span>
                </div>
            </li>
        }
    </ul>
</div>